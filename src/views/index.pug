extends ./layouts/master.pug

block title
  title My Page - Index

block content
  - var pages = { homepage: '/home-page.html', typography: '/typography.html'}
  - var pages2 = {componentshowcase: '/homepage.html'}

  //- Desktop page
  section.page.home__page
    .container
      h1.page__title # Index page

      ul(style="list-style: disc; padding-left: 4rem; margin: 4rem 0")
        each val, index in pages
          li
            a(href=val)= index

      h1.page__title # Card
      ul(style="list-style: disc; padding-left: 4rem; margin: 4rem 0")
        each val, index in pages2
          li
            a(href=val)= index